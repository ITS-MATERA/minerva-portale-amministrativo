<mvc:View controllerName="portaleamministrativo.controller.Home"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:c="sap.ui.core">
	<f:DynamicPage showFooter="true">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>labelTitle}"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:content >
			<IconTabBar id="HomeTabBar" stretchContentHeight="true">
				<items >
					<IconTabFilter key="functional" text="{i18n>labelFunctional}">
						<VBox height="100%">
							<c:Fragment fragmentName="portaleamministrativo.view.fragment.home.Functional.Filters" type="XML" />
							<c:Fragment fragmentName="portaleamministrativo.view.fragment.home.Functional.List" type="XML" />
						</VBox>
					</IconTabFilter>
					<IconTabFilter key="technician" text="{i18n>labelTechnician}">
						<VBox height="100%">
							<c:Fragment fragmentName="portaleamministrativo.view.fragment.home.Technician.Filters" type="XML" />
							<c:Fragment fragmentName="portaleamministrativo.view.fragment.home.Technician.List" type="XML" />
						</VBox>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</f:content>
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer />
				<Button type="Emphasized" text="{i18n>labelNewTicket}" press="onNewTicket" />
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>