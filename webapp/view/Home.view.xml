<mvc:View controllerName="portaleamministrativo.controller.Home"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:my="portaleamministrativo.controls"
	xmlns:l="sap.ui.layout"
	xmlns:ui="sap.ui.table">
	<f:DynamicPage showFooter="true">
		<f:header>
			<f:DynamicPageHeader pinnable="false">
				<l:Grid>
					<my:Input label="{i18n>labelFilter1}">
						<my:layoutData>
							<l:GridData span="XL3 L6 M6 S12" />
						</my:layoutData>
					</my:Input>
					<my:Input label="{i18n>labelFilter2}">
						<my:layoutData>
							<l:GridData span="XL3 L6 M6 S12" />
						</my:layoutData>
					</my:Input>
					<my:Input label="{i18n>labelFilter3}">
						<my:layoutData>
							<l:GridData span="XL3 L6 M6 S12" />
						</my:layoutData>
					</my:Input>
					<my:Input label="{i18n>labelFilter4}">
						<my:layoutData>
							<l:GridData span="XL3 L6 M6 S12" />
						</my:layoutData>
					</my:Input>
				</l:Grid>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<ui:Table rows="{Items>/}"
				selectionMode="None"
				rowActionCount="1">
				<ui:rowActionTemplate>
					<ui:RowAction>
						<ui:RowActionItem type="Navigation"
							icon="sap-icon://display"
							press="onDetail" />
					</ui:RowAction>
				</ui:rowActionTemplate>
				<ui:columns>
					<ui:Column autoResizable="true"
						width=""
						filterProperty=""
						sortProperty="">
						<Label text="{i18n>labelColumn1}" />
						<ui:template>
							<Text text="{Items>Column1}" />
						</ui:template>
					</ui:Column>

				</ui:columns>
				<ui:footer>
					<OverflowToolbar style="Clear">
						<ToolbarSpacer />
						<ToggleButton icon="sap-icon://slim-arrow-left"
							tooltip="{i18n>labelBack}"
							enabled="{Paginator>/BackEnabled}"
							press="onPaginatorBack" />
						<Label text="{Paginator>/Start} - {Paginator>/End}" />
						<ToggleButton icon="sap-icon://slim-arrow-right"
							enabled="{Paginator>/NextEnabled}"
							press="onPaginatorNext"
							tooltip="{i18n>labelNext}" />
						<ToolbarSpacer />
					</OverflowToolbar>
				</ui:footer>
			</ui:Table>
		</f:content>
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer />
				<Button type="Emphasized"
					text="{i18n>labelNewTicket}"
					press="onNewTicket" />
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>