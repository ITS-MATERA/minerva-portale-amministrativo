<mvc:View controllerName="portaleamministrativo.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:c="sap.ui.core"
  xmlns:f="sap.f"
  xmlns:l="sap.ui.layout">
  <f:DynamicPage showFooter="true"
    class="sapUiNoContentPadding">
    <f:header>
      <f:DynamicPageHeader pinnable="false">
        <f:content>
          <VBox>
            <l:Grid>
              <Label text="{i18n>labelSurname}"
                class="sapUiTinyMarginTop">
                <layoutData>
                  <l:GridData span="XL1 L3 M6" />
                </layoutData>
              </Label>
              <FlexBox>
                <Input editable="{Item>/Edit}"
                  value="{Supplier>/RagioneSociale}">
                  <layoutData>
                    <FlexItemData growFactor="100" />
                  </layoutData>
                </Input>
                <Button icon="sap-icon://search"
                  type="Transparent">
                  <layoutData>
                    <FlexItemData growFactor="1" />
                  </layoutData>
                </Button>
                <layoutData>
                  <l:GridData span="XL2 L3 M6" />
                </layoutData>
              </FlexBox>
              <Label text="{i18n>labelCid}"
                class="sapUiTinyMarginTop">
                <layoutData>
                  <l:GridData span="XL1 L3 M6" />
                </layoutData>
              </Label>
              <Input editable="{Item>/Edit}">
                <layoutData>
                  <l:GridData span="XL2 L3 M6" />
                </layoutData>
              </Input>
              <Label text="{i18n>labelName}"
                class="sapUiTinyMarginTop">
                <layoutData>
                  <l:GridData span="XL1 L3 M6" />
                </layoutData>
              </Label>
              <Input editable="false"
                value="{Supplier>/Nome}">
                <layoutData>
                  <l:GridData span="XL2 L3 M6" />
                </layoutData>
              </Input>
              <Label text="{i18n>labelPhone}"
                class="sapUiTinyMarginTop">
                <layoutData>
                  <l:GridData span="XL1 L3 M6"
                    linebreak="true"/>
                </layoutData>
              </Label>
              <Input editable="{Item>/Edit}"
                value="{Supplier>/Telefono}">
                <layoutData>
                  <l:GridData span="XL2 L3 M6" />
                </layoutData>
              </Input>
              <Label text="{i18n>labelCustomer}"
                class="sapUiTinyMarginTop">
                <layoutData>
                  <l:GridData span="XL1 L3 M6" />
                </layoutData>
              </Label>
              <Input editable="{Item>/Edit}">
                <layoutData>
                  <l:GridData span="XL2 L3 M6" />
                </layoutData>
              </Input>
              <Label text="{i18n>labelSite}"
                class="sapUiTinyMarginTop">
                <layoutData>
                  <l:GridData span="XL1 L3 M6" />
                </layoutData>
              </Label>
              <Input editable="{Item>/Edit}">
                <layoutData>
                  <l:GridData span="XL2 L3 M6" />
                </layoutData>
              </Input>
            </l:Grid>
          </VBox>
          <Toolbar height="1px"/>
          <VBox class="sapUiSmallMarginTop">
            <l:Grid>
              <Label text="{i18n>labelCaller}"
                class="sapUiTinyMarginTop">
                <layoutData>
                  <l:GridData span="XL1 L3 M6" />
                </layoutData>
              </Label>
              <FlexBox>
                <Input editable="{Item>/Edit}">
                  <layoutData>
                    <FlexItemData growFactor="100" />
                  </layoutData>
                </Input>
                <Button icon="sap-icon://search"
                  type="Transparent">
                  <layoutData>
                    <FlexItemData growFactor="1" />
                  </layoutData>
                </Button>
                <layoutData>
                  <l:GridData span="XL3 L3 M6" />
                </layoutData>
              </FlexBox>
              <Label text="{i18n>labelPhone}"
                class="sapUiTinyMarginTop">
                <layoutData>
                  <l:GridData span="XL1 L3 M6"
                    linebreak="true"/>
                </layoutData>
              </Label>
              <Input editable="{Item>/Edit}">
                <layoutData>
                  <l:GridData span="XL2 L3 M6" />
                </layoutData>
              </Input>
              <Label text="{i18n>labelEmail}"
                class="sapUiTinyMarginTop">
                <layoutData>
                  <l:GridData span="XL1 L3 M6" />
                </layoutData>
              </Label>
              <FlexBox>
                <Input editable="{Item>/Edit}">
                  <layoutData>
                    <FlexItemData growFactor="100" />
                  </layoutData>
                </Input>
                <Button icon="sap-icon://menu2">
                  <layoutData>
                    <FlexItemData growFactor="1" />
                  </layoutData>
                </Button>
                <layoutData>
                  <l:GridData span="XL2 L3 M6" />
                </layoutData>
              </FlexBox>
              <Label text="{i18n>labelAutoMail}"
                class="sapUiTinyMarginTop">
                <layoutData>
                  <l:GridData span="XL1 L3 M6" />
                </layoutData>
              </Label>
              <CheckBox editable="{Item>/Edit}">
                <layoutData>
                  <l:GridData span="XL1 L1 M1 S1" />
                </layoutData>
              </CheckBox>
            </l:Grid>
          </VBox>
        </f:content>
      </f:DynamicPageHeader>
    </f:header>
    <f:content>
      <IconTabBar>
        <items>
          <IconTabFilter key="info"
            text="{i18n>labelInfo}">
            <c:Fragment fragmentName="portaleamministrativo.view.fragment.detail.Info"
              type="XML" />
          </IconTabFilter>
          <IconTabFilter key="attachments"
            text="{i18n>labelAttachments}">
            <c:Fragment fragmentName="portaleamministrativo.view.fragment.detail.TableAttachments"
              type="XML" />
          </IconTabFilter>
        </items>
      </IconTabBar>
    </f:content>
    <f:footer>
      <OverflowToolbar>
        <Button type="Back"
          text="{i18n>labelBack}"
          press="onBack" />
        <ToolbarSpacer />
        <Button type="Emphasized"
          text="{i18n>labelSend}"
          press="onSend" />

      </OverflowToolbar>
    </f:footer>
  </f:DynamicPage>
</mvc:View>