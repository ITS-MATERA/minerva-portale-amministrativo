<mvc:View controllerName="portaleamministrativo.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:c="sap.ui.core"
  xmlns:f="sap.f"
  xmlns:l="sap.ui.layout">
  <f:DynamicPage showFooter="true">
    <f:content>
      <l:Grid>
        <VBox>
          <Label text="{i18n>labelObject}"
            required="true"/>
          <Select width="100%"
            editable="{Item>/Edit}">
            <c:Item />
          </Select>
          <layoutData>
            <l:GridData span="XL3 L4 M6"
              linebreak="true"/>
          </layoutData>
        </VBox>
        <VBox>
          <Label text="{i18n>labelBukrs}"/>
          <Select width="100%"
            editable="{Item>/Edit}">
            <c:Item />
          </Select>
          <layoutData>
            <l:GridData span="XL3 L4 M6"
              indent="XL1"/>
          </layoutData>
        </VBox>
        <VBox>
          <Label text="{i18n>labelPriority}"
            required="true"/>
          <Select width="100%"
            editable="{Item>/Edit}">
            <c:Item />
          </Select>
          <layoutData>
            <l:GridData span="XL3 L4 M6"
              linebreak="true"/>
          </layoutData>
        </VBox>
        <VBox>
          <Label text="{i18n>labelProblemDescription}"
            required="true"/>
          <TextArea width="100%"
            rows="5"
            editable="{Item>/Edit}"/>
          <layoutData>
            <l:GridData span="XL12 L12 M12"
              linebreak="true"/>
          </layoutData>
        </VBox>
        <Button text="{i18n>labelAttachFile}">
          <layoutData>
            <l:GridData span="XL2 L3 M4"
              linebreak="true"/>
          </layoutData>
        </Button>
      </l:Grid>
    </f:content>
    <f:footer>
      <OverflowToolbar>
        <Button type="Back"
          text="{i18n>labelBack}"
          press="onBack" />
        <ToolbarSpacer />
        <Button type="Emphasized"
          text="{i18n>labelSend}"
          press="onSend" />

      </OverflowToolbar>
    </f:footer>
  </f:DynamicPage>
</mvc:View>