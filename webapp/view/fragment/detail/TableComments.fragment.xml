<c:FragmentDefinition xmlns="sap.m"
  xmlns:c="sap.ui.core"
  xmlns:rowmodes="sap.ui.table.rowmodes"
  xmlns:ui="sap.ui.table"
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
  xmlns:l="sap.ui.layout">
  <VBox>
    <l:Grid>
      <OverflowToolbar style="Clear">
        <ToolbarSpacer/>
        <Button type="Accept" text="{i18n>labelReopenTicket}" press="onReopenTicket">
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
          </layoutData>
        </Button>
        <Button type="Reject" text="{i18n>labelRemoveContact}" press="onRemoveContact">
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
          </layoutData>
        </Button>
        <layoutData>
          <l:GridData span="XL12 L12 M12" />
        </layoutData>
      </OverflowToolbar>



      <FeedInput post="onSaveComment" class="sapUiSmallMarginTopBottom" visible="{= ${Ticket>/state} === 'Chiuso' ? false : true}">
        <layoutData>
          <l:GridData span="XL12 L12 M12" />
        </layoutData>
      </FeedInput>
      <VBox height="50%">
        <List showSeparators="Inner" items="{Ticket>/commentResults}">
          <FeedListItem text="{Ticket>Comment}"/>
        </List>
        <layoutData>
          <l:GridData span="XL12 L12 M12" />
        </layoutData>
      </VBox>
    </l:Grid>
  </VBox>
</c:FragmentDefinition>