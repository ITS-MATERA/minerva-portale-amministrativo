<c:FragmentDefinition xmlns="sap.m"
  xmlns:c="sap.ui.core"
  xmlns:l="sap.ui.layout">
  <Panel class="sapUiMediumMarginBottom">
    <l:Grid>
      <Label text="{i18n>labelBusinessName}/{i18n>labelSurname}"
        class="sapUiTinyMarginTop"
        wrapping="true">
        <layoutData>
          <l:GridData span="XL1 L3 M6"/>
        </layoutData>
      </Label>
      <Input editable="false"
        value="{Supplier>/RagioneSociale}">
        <layoutData>
          <l:GridData span="XL2 L3 M6" />
        </layoutData>
      </Input>
      <Label text="{i18n>labelId}"
        class="sapUiTinyMarginTop">
        <layoutData>
          <l:GridData span="XL1 L3 M6" />
        </layoutData>
      </Label>
      <Input editable="false"
        value="{Supplier>/ID}">
        <layoutData>
          <l:GridData span="XL2 L3 M6" />
        </layoutData>
      </Input>
      <Label text="{i18n>labelName}"
        class="sapUiTinyMarginTop">
        <layoutData>
          <l:GridData span="XL1 L3 M6" />
        </layoutData>
      </Label>
      <Input editable="false"
        value="{Supplier>/Nome}">
        <layoutData>
          <l:GridData span="XL2 L3 M6" />
        </layoutData>
      </Input>
      <Label text="{i18n>labelPhone}"
        class="sapUiTinyMarginTop">
        <layoutData>
          <l:GridData span="XL1 L3 M6"/>
        </layoutData>
      </Label>
      <Input editable="false"
        value="{Supplier>/Telefono}">
        <layoutData>
          <l:GridData span="XL2 L3 M6" />
        </layoutData>
      </Input>
      <Label text="{i18n>labelSociety}"
        class="sapUiTinyMarginTop"
        required="true">
        <layoutData>
          <l:GridData span="XL1 L3 M6"
            linebreak="true"/>
        </layoutData>
      </Label>
      <Select width="100%"
        items="{
            path: 'Select>/Companies',
            templateShareable: false
          }"
        forceSelection="false"
        selectedKey="{Ticket>/company}">
        <c:Item key="{Select>Societa}"
          text="{Select>Butxt}"/>
        <layoutData>
          <l:GridData span="XL2 L3 M6" />
        </layoutData>
      </Select >
      <Label text="{i18n>labelSite}"
        class="sapUiTinyMarginTop">
        <layoutData>
          <l:GridData span="XL1 L3 M6" />
        </layoutData>
      </Label>
      <Input editable="false"
        value="{Supplier>/LocalitÃ }">
        <layoutData>
          <l:GridData span="XL2 L3 M6" />
        </layoutData>
      </Input>
      <Label text="{i18n>labelVatNumber}"
        class="sapUiTinyMarginTop">
        <layoutData>
          <l:GridData span="XL1 L3 M6" />
        </layoutData>
      </Label>
      <Input editable="false"
        value="{Supplier>/PIVA}">
        <layoutData>
          <l:GridData span="XL2 L3 M6" />
        </layoutData>
      </Input>
      <Label text="{i18n>labelFiscalCode}"
        class="sapUiTinyMarginTop">
        <layoutData>
          <l:GridData span="XL1 L3 M6" />
        </layoutData>
      </Label>
      <Input editable="false"
        value="{Supplier>/CodiceFiscale}">
        <layoutData>
          <l:GridData span="XL2 L3 M6" />
        </layoutData>
      </Input>
      <Label text="{i18n>labelEmail}"
        class="sapUiTinyMarginTop">
        <layoutData>
          <l:GridData span="XL1 L3 M6" />
        </layoutData>
      </Label>
      <Input editable="false"
        value="{Supplier>/Email}">
        <layoutData>
          <l:GridData span="XL2 L3 M6" />
        </layoutData>
      </Input>
      <Label text="{i18n>labelEmailAmministrativa}"
        class="sapUiTinyMarginTop">
        <layoutData>
          <l:GridData span="XL1 L3 M6" />
        </layoutData>
      </Label>
      <Input editable="false"
        value="{Supplier>/EmailAmministrativa}">
        <layoutData>
          <l:GridData span="XL2 L3 M6" />
        </layoutData>
      </Input>


    </l:Grid>
  </Panel>
</c:FragmentDefinition>