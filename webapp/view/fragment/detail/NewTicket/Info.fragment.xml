    <VBox>
      <Label text="{i18n>labelPriority}" required="true"/>
      <Select width="100%" items="{
            path: 'Select>/Priorities',
            templateShareable: false
          }" forceSelection="false" change="onPrioritySelect">
        <c:Item key="{Select>Key}" text="{Select>Text}"/>
      </Select >
      <layoutData>
        <l:GridData span="XL2 L3 M4"/>
      </layoutData>
    </VBox>

    <!-- <VBox>
