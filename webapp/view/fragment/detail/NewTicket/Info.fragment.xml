    <VBox>
      <Label text="{i18n>labelShortDescription}" required="true"/>
      <Input value="{Ticket>/short_description}" editable="{Item>/Edit}"/>
      <layoutData>
        <l:GridData span="XL6 L12 M12" linebreak="true"/>
      </layoutData>
    </VBox>
    <VBox>
      <Label text="{i18n>labelDescription}" required="true"/>
      <TextArea width="100%" rows="3" value="{Ticket>/description}" editable="{Item>/Edit}"/>
      <layoutData>
        <l:GridData span="XL9 L12 M12" linebreak="true"/>
      </layoutData>
    </VBox>





  </l:Grid>
</c:FragmentDefinition>