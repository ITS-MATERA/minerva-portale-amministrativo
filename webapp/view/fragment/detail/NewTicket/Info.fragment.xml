    <VBox>
      <Label text="{i18n>labelCategory}" required="true"/>
      <Select width="100%" items="{
            path: 'Select>/Categories',
            templateShareable: false
          }" forceSelection="false" change="onCategorySelect">
        <c:Item key="{Select>Key}" text="{Select>Text}" app:type="{Select>Type}"/>
      </Select >
      <layoutData>
        <l:GridData span="XL3 L4 M6"/>
      </layoutData>
    </VBox>
