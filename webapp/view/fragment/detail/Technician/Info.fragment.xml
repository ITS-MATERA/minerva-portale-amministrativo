<c:FragmentDefinition xmlns="sap.m"
  xmlns:c="sap.ui.core"
  xmlns:l="sap.ui.layout">
  <l:Grid>
    <VBox>
      <Label text="{i18n>labelProblemDescription}"
        required="true"/>
      <TextArea width="100%"
        rows="5"
        editable="false"
        value="{Ticket>/Descrizione_Problema}"/>
      <layoutData>
        <l:GridData span="XL12 L12 M12"
          linebreak="true"/>
      </layoutData>
    </VBox>
  </l:Grid>
</c:FragmentDefinition>