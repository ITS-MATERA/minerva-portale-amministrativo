<c:FragmentDefinition xmlns="sap.m"
  xmlns:c="sap.ui.core"
  xmlns:l="sap.ui.layout">

  <VBox class="sapUiSmallMarginTop">
    <l:Grid>
      <Label text="{i18n>labelCaller}"
        class="sapUiTinyMarginTop"
        required="true">
        <layoutData>
          <l:GridData span="XL1 L3 M6" />
        </layoutData>
      </Label>
      <Input editable="false"
        value="{Supplier>/RagioneSociale}">
        <layoutData>
          <l:GridData span="XL3 L3 M6" />
        </layoutData>
      </Input>
      <Label text="{i18n>labelPhone}"
        class="sapUiTinyMarginTop"
        required="true">
        <layoutData>
          <l:GridData span="XL1 L3 M6"
            linebreak="true"/>
        </layoutData>
      </Label>
      <Input editable="false"
        value="{Supplier>/Telefono}">
        <layoutData>
          <l:GridData span="XL2 L3 M6" />
        </layoutData>
      </Input>
      <Label text="{i18n>labelEmail}"
        class="sapUiTinyMarginTop"
        required="true">
        <layoutData>
          <l:GridData span="XL1 L3 M6" />
        </layoutData>
      </Label>
      <Input editable="false"
        value="{Supplier>/Email}">
        <layoutData>
          <l:GridData span="XL2 L3 M6" />
        </layoutData>
      </Input>
    </l:Grid>
  </VBox>
</c:FragmentDefinition>